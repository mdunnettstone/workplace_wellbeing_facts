<!DOCTYPE html>
<html>
  <head>
    <title>Workplace Well-being Facts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="initial-scale=1">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar sticky-top navbar-toggleable-md navbar-inverse navbar-green">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'Workplace Wellbeing Facts', root_path, class: "navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item <%= active_class(root_path) %>">
              <%= link_to root_path, class: "nav-link" do %>
                <i class="fa fa-home" aria-hidden="true"></i>
                Home
              <% end %>
            </li>
            <li class="nav-item <%= active_class(random_stats_path) %>">
              <%= link_to random_stats_path, class: "nav-link" do %>
                <i class="fa fa-random" aria-hidden="true"></i>
                Random
              <% end %>
            </li>
            <li class="nav-item <%= active_class(stats_path) %>">
              <%= link_to stats_path, class: "nav-link" do %>
                <i class="fa fa-compass" aria-hidden="true"></i>
                Explore
              <% end %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
      <% if notice.present? %>
        <p class="alert alert-info alert-fade my-1 mx-2 mx-md-5"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger alert-fade my-1 mx-2 mx-md-5"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
    <div id="footer">
      <div class="container">
        <b>Admin options</b>
        <br />
        <%= link_to 'Create a new stat', new_stat_path %>
      </div>
    </div>
  </body>
<script>
$(window).scroll(function() {
  if ($(document).scrollTop() > 50) {
    $('nav').addClass('navbar-transparent');
  } else {
    $('nav').removeClass('navbar-transparent');
  }
});

window.setTimeout(function() {
  $(".alert-fade").fadeTo(500, 0).slideUp(600, function(){
      $(this).remove(); 
  });
}, 1000);
</script>
</html>
